# Show system statistics
show_system_stats() {
    clear
    print_app_header
    
    printf "${WHITE}${BOLD}‚ïê‚ïê‚ïê TH·ªêNG K√ä H·ªÜ TH·ªêNG ‚ïê‚ïê‚ïê${NC}\n\n"
    
    # System uptime
    if command -v uptime >/dev/null 2>&1; then
        printf "${CYAN}${BOLD}Uptime:${NC}\n"
        uptime
        echo
    fi
    
    # Memory usage
    if command -v free >/dev/null 2>&1; then
        printf "${CYAN}${BOLD}Memory Usage:${NC}\n"
        free -h
        echo
    fi
    
    # Disk usage
    if command -v df >/dev/null 2>&1; then
        printf "${CYAN}${BOLD}Disk Usage:${NC}\n"
        df -h / 2>/dev/null || df -h
        echo
    fi
    
    # Module statistics if available
    if command -v "$ROOT_DIR/bin/module-cli" >/dev/null 2>&1; then
        printf "${CYAN}${BOLD}Module Statistics:${NC}\n"
        "$ROOT_DIR/bin/module-cli" stats 2>/dev/null || echo "Module statistics not available"
        echo
    fi
    
    printf "${YELLOW}Nh·∫•n ph√≠m b·∫•t k·ª≥ ƒë·ªÉ ti·∫øp t·ª•c...${NC}"
    read -r
}

# Main application loop
main_loop() {
    while true; do
        show_main_menu
        local choice
        choice=$(read_user_choice)
        
        case "$choice" in
            "1")
                handle_packages
                ;;
            "2") 
                handle_development
                ;;
            "3")
                handle_system_config
                ;;
            "4")
                show_system_stats
                ;;
            "5")
                run_module_cli
                ;;
            "6")
                show_system_info
                ;;
            "0")
                printf "\n${GREEN}C·∫£m ∆°n b·∫°n ƒë√£ s·ª≠ d·ª•ng Linux Manager V2!${NC}\n"
                printf "${CYAN}H·∫πn g·∫∑p l·∫°i! üëã${NC}\n\n"
                break
                ;;
            *)
                printf "\n${RED}L·ª±a ch·ªçn kh√¥ng h·ª£p l·ªá. Vui l√≤ng th·ª≠ l·∫°i.${NC}\n"
                sleep 1
                ;;
        esac
    done
}

# Graceful shutdown
graceful_shutdown() {
    printf "\n\n${YELLOW}ƒêang tho√°t Linux Manager V2...${NC}\n"
    
    # Save any pending data
    if declare -f "save_registry_data" >/dev/null 2>&1; then
        save_registry_data >/dev/null 2>&1
    fi
    
    # Shutdown communication system
    if declare -f "shutdown_communication" >/dev/null 2>&1; then
        shutdown_communication >/dev/null 2>&1
    fi
    
    printf "${GREEN}ƒê√£ tho√°t th√†nh c√¥ng. T·∫°m bi·ªát!${NC}\n"
    exit 0
}

# Set up signal handlers
trap graceful_shutdown INT TERM

# Main execution
main() {
    # Record startup time
    STARTUP_TIME=$(date)
    
    # Print application header
    print_app_header
    
    # Check prerequisites
    if ! check_prerequisites; then
        printf "\n${RED}Kh√¥ng th·ªÉ kh·ªüi ƒë·ªông do l·ªói ki·ªÉm tra h·ªá th·ªëng.${NC}\n"
        printf "${YELLOW}Vui l√≤ng kh·∫Øc ph·ª•c c√°c v·∫•n ƒë·ªÅ tr√™n v√† th·ª≠ l·∫°i.${NC}\n"
        exit 1
    fi
    
    echo
    
    # Initialize V2 systems
    if ! initialize_v2_systems; then
        printf "\n${RED}C√≥ l·ªói trong qu√° tr√¨nh kh·ªüi t·∫°o h·ªá th·ªëng.${NC}\n"
        printf "${YELLOW}·ª®ng d·ª•ng s·∫Ω ti·∫øp t·ª•c v·ªõi ch·ª©c nƒÉng h·∫°n ch·∫ø.${NC}\n"
        sleep 2
    fi
    
    echo
    print_startup_status "Linux Manager V2 ƒë√£ s·∫µn s√†ng!" "success"
    sleep 1
    
    # Load UI and start main loop
    load_v2_ui
    main_loop
}

# Run main function if executed directly
if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
    main "$@"
fi
